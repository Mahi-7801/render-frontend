packages:
  yum:
    # Use only MariaDB development headers (available in default repos)
    mariadb-devel: []
    # Essential build tools
    python3-devel: []
    gcc: []
    gcc-c++: []
    libffi-devel: []
    openssl-devel: []

container_commands:
  01_install_connector:
    command: |
      # Install PyMySQL instead of mysql-connector-python (no compilation needed)
      pip install PyMySQL==1.1.0
      # Also try mysql-connector-python but don't fail if it doesn't work
      pip install mysql-connector-python==8.2.0 || echo "mysql-connector-python failed, using PyMySQL"
    ignoreErrors: true 